        android:gravity="center"
        android:textSize="25sp"/>


    <GridView
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="3"
        android:layout_marginTop="50dp" ></GridView>

</LinearLayout>