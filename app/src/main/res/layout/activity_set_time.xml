                        android:id="@+id/mor_reduce_img"
                        style="@style/reduce_img" />

                    <TextView
                        android:id="@+id/mor_num_plus_reduce_tv"
                        style="@style/num_plus_reduce_tv"
                        android:layout_gravity="center"
                        android:text="1" />


                    <ImageView
                        android:id="@+id/mor_plus_img"
                        style="@style/plus_img" />


                </LinearLayout>


            </RelativeLayout>

            <View
                style="@style/set_time_divider"
                />

            <LinearLayout
                style="@style/set_time_linear">

                <TextView

                    style="@style/set_time_class_num_tv"
                    android:text="第一节"
                    />

                <TextView
                    android:id="@+id/class_mor_1"
