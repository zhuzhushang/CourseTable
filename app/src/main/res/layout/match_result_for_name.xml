<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@mipmap/header_01"
    android:text="配对"
    android:textColor="#000000"
    android:gravity="center"
    android:textSize="25sp"
    android:id="@+id/title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:clickable="true"
            >
            <TextView
                android:id="@+id/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名"
                android:textSize="21sp"

                />

            <ImageView
                android:id="@+id/img1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:src="@mipmap/sure"
                android:layout_alignLeft="@+id/t1"
                android:scaleType="matrix"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:clickable="true"
            >
            <TextView
                android:id="@+id/t2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="星座"
                android:textSize="21sp"

                />

            <ImageView
                android:id="@+id/img2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/t2"
                android:src="@mipmap/sure"
                android:layout_alignLeft="@+id/t2"
                android:visibility="gone"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:clickable="true"
           >
            <TextView
                android:id="@+id/t3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生肖"
                android:textSize="21sp"

                />

            <ImageView
                android:id="@+id/img3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/t3"
                android:src="@mipmap/sure"
                android:layout_alignLeft="@+id/t3"
                android:visibility="gone"/>

        </RelativeLayout>
    </LinearLayout>

    </LinearLayout>






    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/l1"
        >







        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/girl"
            android:layout_marginLeft="66dp"
            android:layout_marginTop="48dp"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/boy"

            android:layout_marginLeft="285dp"
            android:layout_marginTop="48dp"/>


        <ImageView
            android:id="@+id/gril"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/edit_text"

            android:layout_marginTop="160dp"
            android:layout_marginLeft="10dp"
            android:scaleType="centerInside"/>




        <EditText
            android:id="@+id/edit_gril"
            android:layout_width="90dp"
            android:layout_height="55dp"
            android:layout_marginLeft="53dp"
            android:layout_marginTop="204dp"
            android:background="@null"
            android:text="英一"/>


        <ImageView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/contact"
            android:layout_marginLeft="175dp"
            android:scaleType="centerInside"
            android:layout_marginTop="230dp"/>

        <ImageView
            android:id="@+id/boy"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/edit_text"

            android:layout_marginTop="160dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:scaleType="centerInside"/>


        <EditText
            android:id="@+id/edit_boy"
            android:layout_width="90dp"
            android:layout_height="55dp"
            android:layout_marginLeft="274dp"
            android:layout_marginTop="204dp"
            android:background="@null"
            android:text="小明"/>






        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/match_background"
            android:layout_below="@+id/boy"
            android:layout_marginTop="20dp"

            android:textColor="#000000"/>

    </RelativeLayout>


</RelativeLayout>