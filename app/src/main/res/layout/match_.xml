<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">







    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/girl"
        android:layout_marginLeft="66dp"
        android:layout_marginTop="48dp"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/boy"
        android:layout_below="@+id/t3"
        android:layout_marginLeft="285dp"
        android:layout_marginTop="48dp"/>


    <ImageView
        android:id="@+id/gril"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/edit_text"
        android:layout_below="@+id/t1"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="10dp"
        android:scaleType="centerInside"/>




    <EditText
        android:id="@+id/edit_gril"
        android:layout_width="90dp"
        android:layout_height="55dp"
        android:layout_marginLeft="53dp"
        android:layout_marginTop="204dp"
        android:background="@null"
        android:text="英一"/>


    <ImageView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/contact"
        android:layout_marginLeft="175dp"
        android:scaleType="centerInside"
        android:layout_marginTop="230dp"/>

    <ImageView
        android:id="@+id/boy"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/edit_text"
        android:layout_below="@+id/t3"
        android:layout_marginTop="160dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:scaleType="centerInside"/>


    <EditText
        android:id="@+id/edit_boy"
        android:layout_width="90dp"
        android:layout_height="55dp"
        android:layout_marginLeft="274dp"
        android:layout_marginTop="204dp"
        android:background="@null"
        android:text="小明"/>





    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/match_background"
        android:layout_below="@+id/boy"
        android:layout_marginTop="20dp"

        android:textColor="#000000"/>

</RelativeLayout>