<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        style="@style/default_appbar_container_relative"
        android:layout_height="48dp"
        android:background="@mipmap/appbar_header">

        <TextView
            style="@style/default_appbar_left_tv_arrow"
            android:text="笔记"
            />

        <ImageView
            style="@style/default_appbar_right_img"
            android:src="@mipmap/add_course"
            />
    </RelativeLayout>

    <ListView
        android:id="@+id/note_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#6a8490"
        android:dividerHeight="0.6dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        ></ListView>



</LinearLayout>