<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="course_linear_contain">

        <item name="android:layout_width">@dimen/week_class_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>

    </style>


    <!--时间段里面的textview-->
    <style name="time_interval_tv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/base_heigth_x3</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ems">1</item>
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">@dimen/time_interval_tv_ems_margin</item>
        <item name="android:background">@drawable/shape_line</item>
        <item name="android:textSize">@dimen/textsize_max</item>
    </style>

    <!--时间用的框-->
    <style name="time_tv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/base_heigth</item>

        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">@dimen/time_interval_tv_ems_margin</item>
        <item name="android:background">@drawable/shape_line</item>
        <item name="android:textSize">@dimen/textsize_middle</item>
        <item name="android:textColor">@color/color_text_black</item>
    </style>

    <!--星期课时用的框-->
    <style name="week_tv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/base_heigth</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">@dimen/time_interval_tv_ems_margin</item>
        <item name="android:background">@drawable/shape_line</item>
        <item name="android:textSize">@dimen/textsize_max</item>
        <item name="android:textColor">@color/color_text_black</item>
    </style>

    <!--星期课时用的框-->
    <style name="class_tv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/base_heigth</item>
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">@dimen/time_interval_tv_ems_margin</item>
        <item name="android:background">@drawable/shape_line</item>
        <item name="android:textSize">@dimen/textsize_middle</item>
        <item name="android:textColor">@color/color_text_black</item>
    </style>




    <style name="course_divider_all">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_heigth</item>

    </style>


    <!--设置界面-->
    <style name="course_set_relative">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>

    </style>

    <!--设置界面-->
    <style name="course_set_tv">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/course_margin_left_right</item>
        <item name="android:textSize">@dimen/textsize_max</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:textColor">#494c4b</item>

    </style>


    <!--设置界面-->
    <style name="course_set_checkbox">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@drawable/selector_set_checkbox</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">20dp</item>

    </style>

    <!--设置界面-->
    <style name="course_set_imageview_arrow">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@mipmap/arrow_right</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginRight">30dp</item>

    </style>

    <!--设置界面-->
    <style name="course_set_divider">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#5a7480</item>
        <item name="android:layout_alignParentBottom">true</item>

    </style>


    <!--课程信息笔记-->
    <style name="course_message_note_linear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">bottom</item>
        <item name="android:layout_marginLeft">@dimen/course_margin_left_right</item>

    </style>
    <!--课程信息笔记-->
    <style name="course_message_note_tv">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/textsize_max</item>
        <item name="android:textColor">#494c4b</item>

    </style>
    <!--课程信息笔记-->
    <style name="course_message_note_et">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:textSize">@dimen/textsize_middle_plus</item>
        <item name="android:textColor">#bac2c7</item>
        <item name="android:background">#eff7f7</item>

    </style>
    <!--课程信息笔记-->
    <style name="course_message_note_divider">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#a4bbc8</item>
        <item name="android:layout_alignParentBottom">true</item>

    </style>

    <!--课程信息笔记 选择颜色-->
    <style name="course_message_note_choice_color_img">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--课程信息笔记 选择颜色-->
    <style name="course_message_note_choice_color_linear">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>

    </style>

    <!--课程信息笔记 对对叉叉-->
    <style name="course_message_note_duidui_chacha_img">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <!--通用减-->
    <style name="reduce_img">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/selector_reduce</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:paddingBottom">3dp</item>

    </style>

    <!--通用加-->
    <style name="plus_img">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/selector_plus</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:paddingBottom">3dp</item>

    </style>

    <!--通用加减中间的数-->
    <style name="num_plus_reduce_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textSize">@dimen/textsize_max</item>
        <item name="android:textColor">@color/color_text_black</item>
    </style>




</resources>